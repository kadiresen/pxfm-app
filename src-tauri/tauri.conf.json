{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "pxfm",
  "version": "1.3.1",
  "identifier": "com.pxfm.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "PXFM",
        "width": 400,
        "height": 750,
        "resizable": false,
        "decorations": false,
        "fullscreen": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "rpm"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Minimalist Internet Radio Player",
    "longDescription": "A beautiful, minimalist internet radio player for your desktop.",
    "linux": {
      "deb": {
        "files": {}
      },
      "rpm": {
        "files": {}
      }
    }
  }
}